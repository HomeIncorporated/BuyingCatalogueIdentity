@model NHSD.BuyingCatalogue.Identity.Api.ViewModels.Account.ResetPasswordViewModel

@{
    ViewData["PageTitle"] = "NHSD Buying Catalogue Reset Password";
    ViewData["PageDescription"] = "Welcome to the reset password page for the NHSD Buying Catalogue.";
}

<div class="nhsuk-width-container">
    <main class="nhsuk-main-wrapper">
        <div data-test-id="reset-password-page">

            <div class="nhsuk-grid-row">
                <div class="nhsuk-grid-column-two-thirds">
                    <h1 data-test-id="reset-password-page-title" class="nhsuk-heading-xl nhsuk-u-margin-bottom-2">Choose your password</h1>
                    <h2 data-test-id="reset-password-page-description" class="nhsuk-heading-s nhsuk-u-margin-bottom-5">Please read the password policy before proceeding.</h2>
                </div>
            </div>
            <div class="nhsuk-grid-row">
                <div class="nhsuk-grid-column-one-half">

                    <div data-test-id="reset-password-page-information">
                        <p>
                            Your password must be at least ten characters in length and match on confirmation.
                        </p>
                        <p>
                            It must contain at least 3 of the following 4 character types:
                        </p>
                        <ul>
                            <li>lower case letters (a-z)</li>
                            <li>upper case letters (A-Z)</li>
                            <li>numbers (0-9)</li>
                            <li>special characters (e.g. !@@#$%^&*)</li>
                        </ul>
                    </div>
                    <div data-test-id="error-summary" asp-nhs-validation-summary></div>
                    <form data-test-id="input-form" asp-controller="Account" asp-action="ResetPassword" novalidate method="post">

                        <div data-test-id="password-field" class="@(ViewData.ModelState.Keys.Contains("Password") ? "nhsuk-form-group--error" : "")">
                            <div data-test-id="text-field-input">
                                <div class="nhsuk-form-group">
                                    <label asp-for="Password" class="nhsuk-label"></label>
                                    <span asp-validation-for="Password" class="nhsuk-error-message"></span>
                                    <input asp-for="Password" class="nhsuk-input" data-test-id="reset-password" />
                                </div>
                            </div>
                        </div>

                        <div data-test-id="confirm-password-field" class="@(ViewData.ModelState.Keys.Contains("ConfirmPassword") ? "nhsuk-form-group--error" : "")">
                            <div data-test-id="text-field-input">
                                <div class="nhsuk-form-group">
                                    <label asp-for="ConfirmPassword" class="nhsuk-label"></label>
                                    <span asp-validation-for="ConfirmPassword" class="nhsuk-error-message"></span>
                                    <input asp-for="ConfirmPassword" class="nhsuk-input" data-test-id="confirm-reset-password" />
                                </div>
                            </div>
                        </div>

                        <button class="nhsuk-button nhsuk-u-margin-top-5 nhsuk-u-margin-bottom-3" type="submit" data-test-id="reset-password-button">
                            Save password
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>
